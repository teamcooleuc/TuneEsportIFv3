<table class="table">
    >
    <thead>
        <tr>
            <th>
                Navn
            </th>
            <th>
                Nick
            </th>
            <th>
                Team
            </th>
            <th>
                Union
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (var item in UserManager.Users)
        {
            <tr>
                <td>
                    <div class="card mb-3">@Html.DisplayFor(modelItem => item.Name)</div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nick)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClubName)
                </td>
                <td>
                    @*<a asp-page="./Edit" asp-route-id="@item.">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>*@


                    @{
                        foreach (var item1 in Model.RoleList)
                        {
                            if (item1.RoleName == "Admin" && item1.UserName == UserManager.GetUserName(User) || item1.RoleName == "Super admin" && item1.UserName == UserManager.GetUserName(User))
                            {

                                <form method="post" asp-route-id="@item1.RoleId">

                                    <input type="hidden" value="@item.Id" class="form-control" asp-for="Role.RoleId" />
                                    <input type="hidden" value="@item.UserName" class="form-control" asp-for="Role.UserName" />

                                    <div class="form-group">
                                        <label asp-for="Role.RoleName" class="control-label"></label>
                                        <select asp-for="Role.RoleName" class="form-control">

                                            <option value="Bruger">Bruger</option>
                                            <option value="Admin">Admin</option>
                                            <option value="Super Admin">Super admin</option>

                                        </select>
                                        <span asp-validation-for="Role.RoleName" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>

                                </form>

                                <form asp-page-handler="DeleteUser" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>

                            }
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

