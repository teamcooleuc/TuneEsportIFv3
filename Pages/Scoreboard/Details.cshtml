@model TuneEsportIFv2.Pages.Scoreboard.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>ScoreBoard</h4>
    <hr />
    <dl class="d-lg-table-row">
        <dt class="row">
            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Identity)
            </dt>
            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ScoreBoard.maps.mapsName)
            </dt>
           

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ScoreBoard.mapKnowledge)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ScoreBoard.mapKnowledge)
            </dd>
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScoreBoard.Smokes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScoreBoard.Smokes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScoreBoard.Tactics)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScoreBoard.Tactics)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScoreBoard.EconomyKnowledge)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ScoreBoard.EconomyKnowledge)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.ScoreBoard.ScoreId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

